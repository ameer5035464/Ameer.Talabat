@model EditProductVM


<div class="container">

    <form method="post" asp-action="Edit" enctype="multipart/form-data">
            <input asp-for="PictureUrl" value="@Model.PictureUrl" hidden/>
        @* <input name="createdBy" value="@ViewBag.createdBy" hidden /> *@
        <input asp-for="id" value="@Model.id" hidden />
        <input asp-for="CreatedBy" value="@Model.CreatedBy" hidden />
        <input asp-for="CreatedOn" type="datetime" value="@Model.CreatedOn" hidden />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group mt-4">
            <img src="@Model.PictureUrl" class="rounded" />
        </div>

        <div class="form-group">
            <label asp-for="Image" class="col-form-label "></label>
            <input asp-for="Image" type="file" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Name" class="col-form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-form-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="col-form-label"></label>
            <input asp-for="Price" class="form-control" type="number" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="col-form-label">Brand</label>
            <select asp-for="BrandId" class="form-control">
                <option value="@null">-- Select Brand --</option>
                @foreach (var item in ViewBag.Brands)
                {
                    <option value="@item.Id">@item.Name</option>

                }
            </select>
        </div>
        <div class="form-group">
            <label class="col-form-label">Category</label>
            <select asp-for="CategoryId" class="form-control">
                <option value="@null">-- Select Category --</option>
                @foreach (var item in ViewBag.Categories)
                {
                    <option value="@item.Id">@item.Name</option>

                }
            </select>
        </div>

        <div class="form-group mt-3">
            <input type="submit" value="Update" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-light">Back To Product List</a>
        </div>


    </form>

</div>